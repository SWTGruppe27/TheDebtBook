<Application x:Class="TheDebtBook.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TheDebtBook"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="StyleHeader">
                <Setter Property="Control.FontSize" Value="20pt"></Setter>
                <Setter Property="Control.FontWeight" Value="ExtraBold"></Setter>
            </Style>
            <Style x:Key="StyleTextInBox">
                <Setter Property="Control.FontSize" Value="12pt"></Setter>
                <Setter Property="Control.FontWeight" Value="Bold"></Setter>
            </Style>
            <Style TargetType="{x:Type Button}">
                <Setter Property="FontSize" Value="12pt"></Setter>
                <Setter Property="FontWeight" Value="Bold"></Setter>
            </Style>
            <Style x:Key="StyleAddText">
                <Setter Property="Control.FontSize" Value="12pt"></Setter>
                <Setter Property="Control.FontWeight" Value="Bold"></Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
